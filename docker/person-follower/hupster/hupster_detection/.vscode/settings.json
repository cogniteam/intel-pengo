{
    // 80/120 Characters rulers
    "editor.rulers": [80,120],        

    // Use 4 spaces instead of tab in c++ code
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    "editor.renderWhitespace": "all",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "files.associations": {
        "*.sdf": "xml",
        "*.json": "jsonc",
        "functional": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "regex": "cpp",
        "type_traits": "cpp",
        "typeinfo": "cpp",
        "array": "cpp",
        "*.def": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
        "exception": "cpp",
        "optional": "cpp",
        "algorithm": "cpp",
        "fstream": "cpp",
        "future": "cpp",
        "initializer_list": "cpp",
        "mutex": "cpp",
        "ostream": "cpp",
        "numeric": "cpp",
        "streambuf": "cpp",
        "thread": "cpp",
        "condition_variable": "cpp",
        "*.txx": "cpp",
        "unordered_map": "cpp",
        "cmath": "cpp",
        "complex": "cpp",
        "iterator": "cpp",
        "cstdlib": "cpp",
        "chrono": "cpp"
    },
    //
    // @link https://code.visualstudio.com/docs/remote/wsl#_i-see-eaccess-permission-denied-error-trying-to-rename-a-folder-in-the-open-workspace
    //
    "remote.WSL.fileWatcher.polling": true,
    "doxdocgen.c.factoryMethodText": "Creates a {name} object",
    "doxdocgen.c.getterText": "Gets the {name}",
    "doxdocgen.c.setterText": "Sets the {name}",
    "doxdocgen.cpp.dtorText": "Destroys the {name} object",
    "doxdocgen.file.fileOrder": [
        "brief",
        "empty",
        "file",
        "empty",
        "author",
        "date",
        "copyright",
        "custom"
    ],
    "doxdocgen.generic.order": [
        "brief",
        "tparam",
        "param",
        "return"
    ],
    "doxdocgen.file.copyrightTag": [
        "@copyright Cogniteam (c) {year}"
    ],
    "doxdocgen.file.customTag": [
        "",
        "Cogniteam LTD",
        "  ",
        "Unpublished Copyright (c) 2016-2020 Cogniteam",
        "   ",
        ""
    ],
    "python.autoComplete.extraPaths": [
        "/home/nix/workspaces/elbit_king/devel/lib/python2.7/dist-packages",
        "/home/nix/catkin_ws/devel/lib/python2.7/dist-packages",
        "/opt/ros/melodic/lib/python2.7/dist-packages"
    ],
    "cSpell.words": [
        "ackermann"
    ]
}